largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == "done" : break
    try:
        num = int(num)
    except:
        print('Invalid input')
        continue
#smallest
    for i in [num]:
        if smallest is None and largest is None:
            smallest = num
            largest = num
        elif smallest > num:
            smallest = num 
        elif largest < num:
            largest = num
print('Maximum is', largest)
print('Minimum is', smallest)
